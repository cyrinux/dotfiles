[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Target = grub
Target = grub-btrfs
Target = linux
Target = linux-firmware
Target = linux-headers

[Action]
Description = Recompressing /boot in lzo
When = PostTransaction
Exec = /usr/bin/btrfs filesystem defragment -r -clzo /boot
Depends = btrfs-progs
