package_cyrinux-x86_64() {
    depends=(
        # base
        'linux'
        'linux-headers'
        'lib32-alsa-lib'
        'lib32-sdl12-compat'
        'lib32-gcc-libs'

        # arch
        'devtools'
        'reflector'

        # boot
        'arch-secure-boot'
        'mkinitcpio-encrypt-detached-header'
        'intel-ucode'
        'terminus-font'

        # virtual machines
        'spice-guest-tools-windows'
        'libvirt'
        'virt-manager'
        'qemu-desktop'
        'qemu-arch-extra'
        'qemu-arm-static-bin'
        'dnsmasq'
        'iptables'
        'edk2-ovmf'
        'kind-bin'

        # hardware
        'x86_energy_perf_policy'
        'thermald'
        'libva-intel-driver'
        'intel-gpu-tools'
        'intel-hybrid-codec-driver'
        'libva-utils'
        'bolt'
        'intel-media-driver'
        'vulkan-headers'
        'vulkan-intel'
        'libsmbios'
        'gyrolock'
        'vulkan-tools'
        'ddcci-driver-linux-dkms'
        'wluma'
        'waybar-eyes'
        'fwupd'
        'bluez-firmware'
        'zam-plugins'
        'iucode-tool'
        'brscan4'
        'display-switch-git'

        # electron
        'signal-desktop'
        'streamlink-twitch-gui-bin'

        # misc
        'vault-kv-search'
        'dsh'
        'obs-cli-bin'
        'obs-studio'
        'obs-websocket'
        'kubespy'
        'molotov'
        'monero-gui'
        'svu'
        'goreleaser'
    )
}

package_cyrinux-aarch64() {
    depends=(
        # base
        'linux-asahi'
        'linux-asahi-headers'

        # arch
        'devtools-alarm'
        'archlinuxarm-keyring'
        'asahi-meta'

        # boot
        'grub'

        'libinput-gestures'
    )
}
