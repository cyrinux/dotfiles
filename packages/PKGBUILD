        'terminus-font'

        # virtual machines
        'spice-guest-tools-windows'
        'libvirt'
        'virt-manager'
        'qemu-desktop'
        'qemu-arch-extra'
        'qemu-arm-static-bin'
        'dnsmasq'
        'iptables'
        'edk2-ovmf'
        'kind-bin'

        # hardware
        'x86_energy_perf_policy'
        'thermald'
        'libva-intel-driver'
        'intel-gpu-tools'
        'intel-hybrid-codec-driver'
        'libva-utils'
        'bolt'
        'intel-media-driver'
        'vulkan-headers'
        'vulkan-intel'
        'libsmbios'
        'gyrolock'
        'vulkan-tools'
        'ddcci-driver-linux-dkms'
        'wluma'
        'waybar-eyes'
        'fwupd'
        'bluez-firmware'
        'zam-plugins'
        'iucode-tool'
        'brscan4'
        'display-switch-git'

