##!/bin/bash

trap 'pkill -P $$' EXIT

vpn() {
    if [ -e "/sys/class/net/tun-prod" ]; then
        icon='ï™Š'
        class=on
    else
        icon=''
        class=off
    fi
    tooltip="Connected to production"
    printf '{"text": "%s", "tooltip": "%s", "class": "%s"}\n' "$icon" "$tooltip" "$class"
}

vpn

ip monitor link | while read -r line; do vpn; done
