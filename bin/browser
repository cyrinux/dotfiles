#!/bin/sh
menu=$(echo "personal\nwork\nshopping\ndisposable\ntor browser\ndisposable without network\ncopy to clipboard\nplay" | dmenu -p "browser")

case $menu in
    "disposable without network")
        firewarden -n firefox "$@" &
    ;;
    "disposable")
        firewarden firefox "$@" &
    ;;
    "tor browser")
        tor-browser-en "$@" &
    ;;
    "personal")
        firefox-container -n Personal --fingerprint --blue "$@" &
    ;;
    "work")
        firefox-container -n Work --briefcase --red "$@" &
    ;;
    "copy to clipboard")
       echo "$@" | wl-copy
    ;;
    "play")
       kitty @ new-window --no-response --window-type os streamlink "$@" &
    ;;
esac
