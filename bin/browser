#!/bin/bash
menu=$(echo -e "firefox\nchromium\ndisposable\ntor browser\nqutebrowser\ndisposable without network\nqrcode\ncopy to clipboard\nplay" | wofi -d -p "browser")

case $menu in
    "chromium")
        eval chromium $@ >/dev/null 2>&1 &
    ;;
    "disposable without network")
        eval firewarden -n chromium $@ >/dev/null 2>&1 &
    ;;
    "disposable")
        eval firewarden chromium $@ >/dev/null 2>&1 &
    ;;
    "tor browser")
        eval tor-browser-en $@ >/dev/null 2>&1 &
    ;;
    "firefox")
        eval firefox -P default $@ >/dev/null 2>&1 &
    ;;
    "qutebrowser")
        eval firewarden -c qutebrowser $@ >/dev/null 2>&1 &
    ;;
    "qrcode")
        eval qrcode $@ >/dev/null 2>&1 &
    ;;
    "copy to clipboard")
       eval echo \"$@\" | wl-copy
    ;;
    "play")
        eval mpv $@ >/dev/null 2>&1 &
    ;;
    *)
        echo $menu $@ >/dev/null 2>&1 &
    ;;
esac

