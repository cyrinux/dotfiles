#!/bin/bash
trap 'pkill -P $$' EXIT

check() {
    notmuch new > /dev/null
    count="$(notmuch count 'tag:unread')"
    tooltip="There are $count new emails"
    if [ "$count" = "0" ]; then
        printf '{"text": ""}\n'
    else
        printf '{"text": "ïƒ  %s", "tooltip": "%s"}\n' "$count" "$tooltip"
    fi
    inotifywait -q -e move -e create -e delete /home/cyril/.mail/personal/INBOX/cur > /dev/null
    check
}

check
