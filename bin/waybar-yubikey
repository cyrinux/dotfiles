#!/bin/bash

reasons=()

nc -U /run/user/${UID}/yubikey-touch-detector.socket | while read -n5 cmd; do
    reason="${cmd:0:3}"

    if [ "${cmd:4:1}" = "1" ]; then
        reasons+=("$reason")
    else
        for i in "${!reasons[@]}"; do
            if [ "${reasons[i]}" = "$reason" ]; then
                unset 'reasons[i]'
                break
            fi
        done
    fi

    if [ "${#reasons[@]}" -eq 0 ]; then
        printf '{"text": ""}\n'
    else
        tooltip="Yubikey is waiting for a touch, reasons: ${reasons[@]}"
        printf '{"text": " ï‚„ ", "tooltip": "%s"}\n' "$tooltip"
    fi
done
