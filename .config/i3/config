bindcode $hyper+24 focus parent

# Focus the child container (hyper+z)
bindcode $hyper+25 focus child

# move the currently focused window to the scratchpad
# (mod+Shift+²)
bindcode $win+49 move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
# (mod+²)
bindcode $hyper+49 scratchpad show

#navigate workspaces next / previous
bindsym $hyper+Ctrl+Right workspace next
bindsym $hyper+Ctrl+Left workspace prev

