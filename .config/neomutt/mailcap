text/plain; nvim %s ;
text/html; ~/.config/neomutt/etc/openhtml.sh %s;
text/html; w3m -o display_link_number=1 -I %{charset} -T text/html; copiousoutput;
image/*; ~/.config/neomutt/etc/muttimage.sh %s ; copiousoutput;
video/*; setsid mpv --quiet %s &; copiousoutput;
application/*; ~/.config/neomutt/etc/openfile.sh %s;
application/ics; ~/.config/neomutt/etc/printics.sh %s; copiousoutput; print=khal import --batch -a personal %s;
application/pdf; pdftotext -l 10 -nopgbrk -q -- %s - | fmt -w 120; copiousoutput;
application/pdf; ~/.config/neomutt/etc/openfile.sh %s;
application/pgp-encrypted; gpg -d '%s'; copiousoutput;
application/pgp-keys; pgp -f < %s ; copiousoutput;
text/calendar; ~/.config/neomutt/etc/printics.sh %s; copiousoutput; print=khal import --batch -a personal %s;
