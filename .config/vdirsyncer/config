[general]
# A folder where vdirsyncer can store some metadata about each pair.
status_path = "~/.vdirsyncer/status/"

[pair my_contacts]
a = "my_contacts_local"
b = "my_contacts_remote"
collections = ["from a", "from b"]
conflict_resolution = ["command", "meld"]


[storage my_contacts_local]
type = "filesystem"
path = "~/library/contacts/"
fileext = ".vcf"

[storage my_contacts_remote]
type = "carddav"
url.fetch = ["command", "~/bin/vdirsyncer-get-creds", "contacts_url"]
username.fetch = ["command", "~/bin/vdirsyncer-get-creds", "username"]
password.fetch = ["command", "~/bin/vdirsyncer-get-creds", "password"]


[pair my_calendars]
a = "my_calendars_local"
b = "my_calendars_remote"
collections = ["from a", "from b"]
metadata = ["color"]
conflict_resolution = "b wins"

[storage my_calendars_local]
type = "filesystem"
path = "~/library/calendars/"
fileext = ".ics"

[storage my_calendars_remote]
type = "caldav"
url.fetch = ["command", "~/bin/vdirsyncer-get-creds", "calendars_url"]
username.fetch = ["command", "~/bin/vdirsyncer-get-creds", "username"]
password.fetch = ["command", "~/bin/vdirsyncer-get-creds", "password"]
