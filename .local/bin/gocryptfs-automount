#!/bin/sh

[ ! -d ~/Vault ] && mkdir -p ~/Vault

inotifywait -q -m -e access ~/Vault/ | while read -r line; do
	echo "try to access to: $line"
	if [ ! -f ~/Vault/.lock ]; then
		gocryptfs -extpass "pass personal/crypt/gocryptfs-nextcloud" -idle "${1:-60}m" -fg -noprealloc -- ~/Nextcloud/gocryptfs ~/Vault
	fi
done
