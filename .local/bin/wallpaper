#!/bin/bash

PARAMS=(
    "animals"
    # "clouds"
    "dogs"
    # "flowers"
    # "mountains"
    "nature"
    "sea"
    # "fish"
    "fish-tank"
)
RAND=$(( RANDOM % ${#PARAMS[@]} ))
RESOLUTION="1920x1080"
URL="https://source.unsplash.com/featured/${RESOLUTION}/daily?${PARAMS[$RAND]}"
WALLPAPER=~/.wallpaper.jpeg

if test -f "$WALLPAPER"; then
    RES=$(curl -sL "$URL" -o "$WALLPAPER")
    if [ -z "$RES" ]; then
        swaybg -i "$WALLPAPER"
    fi
fi
