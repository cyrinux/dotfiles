#!/bin/bash
set -euo pipefail

lock="${XDG_CACHE_HOME}/waybar-decrypted.lock"

output() {
	if [ -f "/home/cyril/Vault/.lock" ]; then
		printf '{"text": "ï™ž"}\n'
	else
		printf '{"text": ""}\n'
	fi
}

check() {
	exec 100> ${lock} || exit 1
	flock 100 || exit 1
	output
	inotifywait -q "/home/cyril/Vault/.lock" > /dev/null 2>&1
	output
	inotifywait -q "/home/cyril/Vault" > /dev/null
	check
}

check
