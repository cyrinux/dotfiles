#!/bin/sh

output() {
    if [ -f "/home/cyril/Vault/.lock" ]; then
        printf "{\"text\": \"<span foreground='#928374'>ï™ž</span>\"}\n"
    else
        printf '{"text": ""}\n'
    fi
}

check() {
    output
    inotifywait -q "/home/cyril/Vault/.lock" > /dev/null 2>&1
    output
    inotifywait -q "/home/cyril/Vault" > /dev/null
    check
}

check
