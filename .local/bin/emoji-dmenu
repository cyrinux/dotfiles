#!/bin/sh

data="${XDG_CACHE_HOME:-$HOME/.cache}/emoji.data"
[ -f "$data" ] || {
    notify-send "emoji-dmenu" "Bootstrapping emojis, please wait..."
    emoji-bootstrap
}

[ "$1" = "kitty" ] && kitty=1 || kitty=0

find() {
    if [ "$kitty" = "1" ]; then
        fzf --reverse --prompt='emoji> '
    else
        dmenu -p emoji
    fi
}

output() {
    if [ "$kitty" = "1" ]; then
        cat
    else
        wl-clipboard-manager lock
        wl-copy
        wl-clipboard-manager unlock
    fi
}

line="$(cat "$data" | find)"
if [ -n "$line" ]; then
    sed -i "/$line/d" "$data"
    sed -i "1s;^;$line\n;;" "$data"

    printf '%s' "$line" | cut -d' ' -f1 | tr -d '\n' | output
fi
