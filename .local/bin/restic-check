#!/bin/sh
set -u

main() {
    for repo in $(lsrepos); do
        check "$repo"
    done
}

check() {
    eval "$(pass "personal/backup/restic/$1" 2> /dev/null)"

    echo
    echo "Checking up to $RESTIC_REPOSITORY..."
    echo

    restic check --json
    restic prune --json

}

lsrepos() {
    find "${PASSWORD_STORE_DIR:-$HOME/.password-store}/personal/backup/restic" -type f |
        sed -e 's/^.*restic\///' -e 's/\.gpg$//'
}

main "$@"
