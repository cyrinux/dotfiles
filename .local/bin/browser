#!/bin/sh
menu=$(echo "personal\nwork\nshopping\ndisposable\ndisposable without network\ncopy to clipboard\nplay" | dmenu -p "browser")

case $menu in
    "qutebrowser")
        open_url_in_instance.sh "$@" &
        ;;
    "disposable without network")
        firewarden -n qutebrowser "$@" &
        ;;
    "disposable")
        firewarden qutebrowser "$@" &
        ;;
    "personal")
        qutebrowser-personal "$@" &
        ;;
    "work")
        qutebrowser-work "$@" &
        ;;
    "shopping")
        qutebrowser-shopping "$@" &
        ;;
    "copy to clipboard")
        echo "$@" | wl-copy
        ;;
    "play")
        mpv "$@" &
        ;;
esac
