#!/bin/sh
menu=$(echo "personal\nwork\nshopping\ndisposable\ndisposable without network\ncopy to clipboard\nplay" | dmenu -p "browser")

case $menu in
    "disposable without network")
        firewarden -q -n qutebrowser "$@" &
        ;;
    "disposable")
        firewarden -z 127.1.1.1 -q qutebrowser "$@" &
        ;;
    "personal")
        qutebrowser-personal "$@" &
        ;;
    "work")
        qutebrowser-work "$@" &
        ;;
    "shopping")
        qutebrowser-shopping "$@" &
        ;;
    "copy to clipboard")
        echo "$@" | wl-copy &
        ;;
    "play")
        mpv "$@" &
        ;;
esac
