#!/bin/sh

marker="/tmp/waybar-dnd"

show() {
    if [ -e "$marker" ]; then
        printf "{\"text\": \" <span foreground='#928374'></span> \", \"class\": \"on\"}\n"
    else
        printf "{\"text\": \" <span foreground='#928374'></span> \", \"class\": \"off\"}\n"
    fi
}

on() {
    systemctl --user stop mako
    safeeyes -d
    touch "$marker"
    pkill -RTMIN+2 -x waybar
}

off() {
    systemctl --user start mako
    safeeyes -e
    rm -f "$marker"
    pkill -RTMIN+2 -x waybar
}

toggle() {
    [ -e "$marker" ] && off || on
}

case "$1" in
    on) on ;;
    off) off ;;
    toggle) toggle ;;
    '') show ;;
esac
