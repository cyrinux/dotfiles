#!/bin/sh

on() {
    [ "$(swaync-client --get-dnd)" = "true" ] || swaync-client --toggle-dnd
    pkill -RTMIN+2 -x waybar
}

off() {
    [ "$(swaync-client --get-dnd)" = "false" ] || swaync-client --toggle-dnd
    pkill -RTMIN+2 -x waybar
}

toggle() {
    swaync-client --toggle-dnd
    pkill -RTMIN+2 -x waybar
}

case "$1" in
    on) on ;;
    off) off ;;
    toggle) toggle ;;
esac
