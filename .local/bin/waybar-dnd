#!/bin/sh

marker="/tmp/waybar-dnd"

show() {
    if [ -e "$marker" ]; then
        printf '{"text": " \uf1f6 ", "class": "on"}\n'
    else
        printf '{"text": " \uf0f3 ", "class": "off"}\n'
    fi
}

toggle() {
    if [ -e "$marker" ]; then
        makoctl set invisible=false
        safeeyes -e
        rm -f "$marker"
    else
        makoctl set invisible=true
        safeeyes -d
        touch "$marker"
    fi
    pkill -RTMIN+2 -x waybar
}

[ $# -gt 0 ] && toggle || show
