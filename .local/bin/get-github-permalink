#!/bin/sh
set -e

usage() {
    echo "$0 file line_number"
    exit 1
}

[ -z $1 ] && usage

cd "$(dirname $1)"

root="$(git rev-parse --show-toplevel)"
[ -z $root ] && exit 2

commitid="$(git -C $root rev-parse HEAD)"
remote="$(echo $(git -C $root remote get-url origin) | sed 's#git@##' | sed 's#http[s?]://##' | sed 's#:#/#' | sed 's#.git$##')"
file="$(git -C $root ls-files $1)"

if [ -z $2 ]; then
    echo "https://$remote/blob/$commitid/$file#"
    wl-copy "https://$remote/blob/$commitid/$file"
else
    echo "https://$remote/blob/$commitid/$file#L$2"
    wl-copy "https://$remote/blob/$commitid/$file#L$2"
fi

exit 0
