#!/bin/bash
set -ef -o pipefail

usage() {
	echo "$(basename $0) bluetooth_mac 00:11:22:33:44:55 [name]"
	exit 1
}

connect() {
	bluetoothctl power on
	bluetoothctl connect $1
}

if [ -z "$1" ]; then
	usage
else
	mac="${1::17}"
	name="${2:-$1}"
	echo "Connecting to $name ..."
	connect "$mac"
	notify-send -i bluetooth-active-symbolic "Bluetooth" "Connected to ${name}"
fi
