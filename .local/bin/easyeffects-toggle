#!/bin/bash

set -euo pipefail

action="${1:-'status'}"

toggle() {
    state="$(easyeffects -b 3 2>&1)"
    if [ "$state" == "1" ]; then
        easyeffects -b 2
    else
        easyeffects -b 1
    fi
}

status() {
    while true; do
        state="$(easyeffects -b 3 2>&1)"
        if [ "$state" == "1" ]; then
            icon="ðŸ”‰"
            class=""
            tooltip="enabled"
        else
            icon="ðŸ”Š"
            class=""
            tooltip="disabled"
        fi
        printf '{"text": " %s ", "tooltip": "%s", "class": "%s"}\n' "$icon" "$tooltip" "$class"
        sleep 1
    done
}

case "$action" in
    toggle)
        toggle
        ;;
    *)
        status
        ;;
esac
